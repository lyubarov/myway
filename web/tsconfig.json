{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~components/*": ["components/*"],
      "~screens/*": ["screens/*"],
      "~navigation/*": ["navigation/*"],
      "~appTypes/*": ["appTypes/*"],
      "~utils/*": ["utils/*"]
    },
    "declaration": true, // üî• –í–∏–º–∏–∫–∞—î —Å—Ç–≤–æ—Ä–µ–Ω–Ω—è .d.ts —Ñ–∞–π–ª—ñ–≤
    "declarationMap": true, // üî• –ó–∞–±–æ—Ä–æ–Ω—è—î –≥–µ–Ω–µ—Ä–∞—Ü—ñ—é –∫–∞—Ä—Ç .d.ts
    "emitDeclarationOnly": false, // üî• –ù–µ –≥–µ–Ω–µ—Ä—É—î –ª–∏—à–µ –¥–µ–∫–ª–∞—Ä–∞—Ü—ñ—ó
    "moduleResolution": "node",
    "noEmit": false, // üî• –í–º–∏–∫–∞—î –≥–µ–Ω–µ—Ä–∞—Ü—ñ—é —Ñ–∞–π–ª—ñ–≤ –ø—Ä–∏ –∫–æ–º–ø—ñ–ª—è—Ü—ñ—ó
    "outDir": "./dist", // üî• –£—Å—ñ –±—ñ–ª–¥–æ–≤–∞–Ω—ñ —Ñ–∞–π–ª–∏ –±—É–¥—É—Ç—å —É dist
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "assets",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
